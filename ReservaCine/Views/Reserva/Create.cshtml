@model ReservaCine.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaAlta" class="control-label"></label>
                <input asp-for="FechaAlta" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadButacas" class="control-label"></label>
                <input asp-for="CantidadButacas" class="form-control" />
                <span asp-validation-for="CantidadButacas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcion" class="control-label"></label>
                <br />
                <select id="ddlFuncion" name="FuncionId" class="custom-select">
                    <option value="">-- Seleccionar Funcion --</option>
                    @foreach (Funcion funcion in ViewBag.FuncionId)
                    {
                        <option value="@funcion.Id">@funcion.Fecha</option>
                    }
                </select>
                <input asp-for="FuncionId" type="hidden" name="FuncionId" class="form-control" />
                <span asp-validation-for="FuncionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
